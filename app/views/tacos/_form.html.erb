<% if @taco.errors.any? %>
  <ul class="errors">
    <% @taco.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @taco do |f| %>
  <div class="">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="">
    <%= f.label :photo_url %>
    <%= f.text_field :photo_url %>
  </div>

  <div class="">
    <%= f.submit %>
  </div>
<% end %>
